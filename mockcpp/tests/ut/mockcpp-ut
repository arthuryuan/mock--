#!/bin/bash

TESTNGPP_ROOT=`pwd`/../3rdparty/testngpp

MOCKCPP_UT_SUITES=`ls libmockcpp-ut-*`
${TESTNGPP_ROOT}/src/runner/testngpp-runner \
   -L${TESTNGPP_ROOT}/src/listeners \
   -l"testngppxmllistener result.xml" \
   -l"testngppstdoutlistener -c -v" \
   -t"* > ft" -c10 $@ \
   ${MOCKCPP_UT_SUITES}

